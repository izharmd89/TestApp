<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_15sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_6sdp"
    app:cardMaxElevation="@dimen/_3sdp"
    app:cardPreventCornerOverlap="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtConfirmed"
            style="@style/textView"
            android:layout_marginTop="@dimen/_5sdp" />


        <TextView
            android:id="@+id/txtDeltaconfirmed"
            style="@style/textView" />


        <TextView
            android:id="@+id/txtDeltadeaths"
            style="@style/textView" />


        <TextView
            android:id="@+id/txtDailyRecovered"
            style="@style/textView" />

        <TextView
            android:id="@+id/txtLastUpdateDateTime"
            style="@style/textView" />

        <TextView
            android:id="@+id/txtMigratedother"
            style="@style/textView" />

        <TextView
            android:id="@+id/txtStatecode"
            style="@style/textView" />

        <TextView
            android:id="@+id/txtStatenotes"
            style="@style/textView" />


        <TextView
            android:id="@+id/txtOk"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bg_rounded"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="Ok"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>